<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_dog_image"
            android:contentDescription="@string/img_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" />
    <TextView
            android:text="@string/txt_adoption"
            android:layout_width="261dp"
            android:layout_height="29dp"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/Welcome_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintVertical_bias="0.94" />

    <TextView
            android:layout_width="286dp"
            android:layout_height="41dp"
            android:text="@string/txtView_welcome"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/Welcome_text"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="480dp"
            app:layout_constraintHorizontal_bias="0.504" />

    <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txtEdit_welcome"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/Welcome_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="544dp" />


    <Button
            android:id="@+id/btnEnterApp"
            android:layout_width="198dp"
            android:layout_height="52dp"
            android:text="@string/btn_welcome"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="124dp"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="123dp"
            app:layout_constraintVertical_bias="0.678"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

</androidx.constraintlayout.widget.ConstraintLayout>